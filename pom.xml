<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.lapsa.maven.pom</groupId>
	<artifactId>javaee7-app-parent</artifactId>
	<version>1.1.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>LAPSA General Java EE 7 parent POM</name>

	<organization>
		<name>LAPSA, JSC</name>
		<url>http://www.lapsa.org</url>
	</organization>

	<licenses>
		<license>
			<name>GNU General Public License (GPL)</name>
			<url>http://www.gnu.org/licenses/gpl.html</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Vadim Isaev</name>
			<email>vadim.o.isaev@gmail.com</email>
			<roles>
				<role>God</role>
			</roles>
		</developer>
	</developers>

	<distributionManagement>
		<repository>
			<id>archiva.releases</id>
			<layout>default</layout>
			<url>http://mvnrepo.theeurasia.kz/repository/releases/</url>
		</repository>
		<snapshotRepository>
			<id>archiva.snapshots</id>
			<layout>default</layout>
			<url>http://mvnrepo.theeurasia.kz/repository/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- internal -->
			<!-- external -->
			<!-- JavaEE -->
			<dependency>
				<groupId>javax</groupId>
				<artifactId>javaee-api</artifactId>
				<version>7.0</version>
				<scope>provided</scope>
			</dependency>
			<!-- test -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.12</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.hamcrest</groupId>
				<artifactId>hamcrest-all</artifactId>
				<version>1.3</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<defaultGoal>clean install</defaultGoal>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.5.1</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ear-plugin</artifactId>
					<version>2.10.1</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ejb-plugin</artifactId>
					<version>2.5.1</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>2.10</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.5.3</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.6</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.10.3</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>3.0.0</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.8.2</version>
				</plugin>
				<plugin>
					<groupId>org.polago.maven.plugins</groupId>
					<artifactId>merge-properties-maven-plugin</artifactId>
					<version>1.0.1</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>7</version>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<ejbVersion>3.1</ejbVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagNameFormat>v@{project.version}</tagNameFormat>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<failOnError>false</failOnError>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>enable-validation-messages-merge</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>enable-validation-messages-merge</name>
				</property>
			</activation>
			<properties>
				<validation-messages-unpacked-path>${project.build.directory}/dependencies/unpacked-validation-messages/</validation-messages-unpacked-path>
				<validation-messages-merged-path>${project.build.directory}/classes/</validation-messages-merged-path>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack-validation-messages</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<ignoreNonCompile>trues</ignoreNonCompile>
							<transitive>false</transitive>
							<includes>/ValidationMessages*.properties</includes>
							<useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
							<outputDirectory>${validation-messages-unpacked-path}</outputDirectory>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.polago.maven.plugins</groupId>
						<artifactId>merge-properties-maven-plugin</artifactId>
						<configuration>
							<outputDirectory>${validation-messages-merged-path}</outputDirectory>
							<resources>
								<resource>
									<directory>${validation-messages-unpacked-path}</directory>
									<filtering>false</filtering>
								</resource>
							</resources>
						</configuration>
						<executions>
							<execution>
								<id>merge-validation-messages-ru</id>
								<phase>process-resources</phase>
								<goals>
									<goal>merge</goal>
								</goals>
								<configuration>
									<outputFile>ValidationMessages_ru.properties</outputFile>
									<resources>
										<resource>
											<includes>
												<include>**/ValidationMessages_ru.properties</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
							<execution>
								<id>merge-validation-messages-kk</id>
								<phase>process-resources</phase>
								<goals>
									<goal>merge</goal>
								</goals>
								<configuration>
									<outputFile>ValidationMessages_kk.properties</outputFile>
									<resources>
										<resource>
											<includes>
												<include>**/ValidationMessages_kk.properties</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
							<execution>
								<id>merge-validation-messages-en</id>
								<phase>process-resources</phase>
								<goals>
									<goal>merge</goal>
								</goals>
								<configuration>
									<outputFile>ValidationMessages_en.properties</outputFile>
									<resources>
										<resource>
											<includes>
												<include>**/ValidationMessages_en.properties</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>

			</build>
		</profile>
	</profiles>

	<scm>
		<connection>scm:git:https://gitrepo.theeurasia.kz/vadim.isaev/javaee7-app-parent.git</connection>
		<developerConnection>scm:git:https://gitrepo.theeurasia.kz/vadim.isaev/javaee7-app-parent.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<repositories>
		<repository>
			<id>eurasia-repository</id>
			<name>Eurasia Maven Repository</name>
			<url>http://mvnrepo.theeurasia.kz/repository/releases/</url>
		</repository>
		<repository>
			<id>primefaces-repository</id>
			<name>Primefaces Maven Repository</name>
			<url>http://repository.primefaces.org/</url>
		</repository>
	</repositories>

</project>
